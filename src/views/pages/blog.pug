extends ../main.layout.pug

block variables
	- var title = 'Блог'
	- var number = 2

block scripts
	script(src='blog.bundle.js')

block title
	.section-title
		+icon("blog_header", "svg-title svg-title--blog")

block hero__btn
	button.hero__btn-none

block user__info
	h1.title.title--blog Блог
	.user__desc.user__desk--blog Статьи, которые я написал
block content
	main.blog
		.works__triangles
			svg(fill="#efeee9", viewbox="0 0 900 150", class="triangle works__triangles--white", preserveAspectRatio="none")
				polygon(points="0,0 0,150 900,150")
			svg(fill="#eeebdf", viewbox="0 0 900 150", class="triangle works__triangles--white", preserveAspectRatio="none")
				polygon(points="0,150 900,150 900,0")
		.articles
			aside.sidebar.sidebar--open
				+nav('menu-vertical', ['Самое важное в SASS', 'Приёмы в вёрстке, без которых не обходится ни один сайт', 'Самый необхожимый набор Gulp плагинов', 'Почему я выбрал Pug'], 0, ['#', '#', '#', '#'])

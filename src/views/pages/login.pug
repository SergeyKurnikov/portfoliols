extends ../auth.layout.pug
block variables
	-var title = 'Авторизация'
block content
	.welcome
		.welcome__container
			form.login__form
				h3.user-data__title.title.title--subtitle Авторизуйтесь
				.form-fields
					.form-field
						label.label-login(for="id-login")
							+icon("login", "svg-login")
						input.input-log(id="id-login" placeholder="Логин" type="text")
					.form-field
						label.label-pass(for="id-pass")
							+icon("password", "svg-login")
						input.input-pass(id="id-pass" placeholder="Password" type="password")
				label.checkbox__form(for="human")
					input.checkbox__form-el(type="checkbox" name="human" id="human")
					.checkbox__form-fake
					.checkbox__form-text Я человек
				.question__form Вы точно не робот?
				.radio__form-row
					label.radio__form.radio__form--right(for="yes")
						input.radio__form-el(type="radio" name="robot" id="yes")
						.radio__form-fake
						.radio__form-text Да
					label.radio__form(for="no")
						input.radio__form-el(type="radio" checked name="robot" id="no")
						.radio__form-fake
						.radio__form-text Не уверен
				.button__row
					.button__form
						a.button__form-left.button__form-left--ref(href="index.html") 
							span На главную
					.button__form
						button.button__form-right(type="submit") Войти
		.copyright.copyright--welcome
			p © Сергей Курников | создано с любовью в LoftSchool | 2019